# API Settings
PROJECT_NAME="ML Model API Server"
PROJECT_DESCRIPTION="A FastAPI server for deploying machine learning models as APIs"
VERSION="0.1.0"

# Server Settings
HOST="0.0.0.0"
PORT=8000
DEBUG=true

# CORS Settings
ALLOWED_HOSTS="*"

# Model Settings
# MODEL_PATH="/path/to/custom/models"

# API Provider Settings
# Options: "auto" (use OpenRouter if available, else OpenAI), "openai", "openrouter"
PREFERRED_API_PROVIDER="auto"

# OpenAI Settings
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL_NAME="gpt-3.5-turbo"
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=512
OPENAI_EMBEDDING_MODEL="text-embedding-ada-002"

# OpenRouter Settings
OPENROUTER_API_KEY="your-openrouter-api-key-here"
OPENROUTER_API_BASE="https://openrouter.ai/api/v1"
YOUR_SITE_URL="http://localhost:3000"
YOUR_SITE_NAME="PersianWay AI Bot"

# Model Parameters
DEFAULT_MODEL="openai/gpt-4.1"
TEMPERATURE=0.7
TOP_P=1.0
MAX_TOKENS=512

# MongoDB Settings
MONGODB_URL="mongodb://localhost:27017"
MONGODB_DATABASE="persian_agriculture_db"
MONGODB_CONVERSATIONS_COLLECTION="conversations"
CONVERSATION_TTL_DAYS=365